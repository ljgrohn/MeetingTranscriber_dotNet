<UserControl x:Class="MeetingTranscriber.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:MeetingTranscriber.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:HistoryViewModel/>
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="â–º HISTORY_LOG"
                       Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Left"
                       FontSize="24"/>
            <TextBlock Text="// Database of recorded sessions"
                       Foreground="{StaticResource TerminalDimmed}"
                       FontSize="12"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding HistoryEntries}"
                  SelectedItem="{Binding SelectedEntry}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserSortColumns="True"
                  CanUserResizeColumns="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F5F5F5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Recording Date"
                                    Binding="{Binding RecordingDate, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                    Width="140"/>
                <DataGridTextColumn Header="Meeting Name"
                                    Binding="{Binding MeetingName}"
                                    Width="*"
                                    MinWidth="150"/>
                <DataGridTextColumn Header="Stage"
                                    Binding="{Binding Stage}"
                                    Width="120"/>
                <DataGridTextColumn Header="Saved File"
                                    Binding="{Binding SavedFilePath}"
                                    Width="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding SavedFilePath}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="[ REFRESH ]"
                    Command="{Binding RefreshCommand}"
                    Width="120"
                    Height="35"
                    FontSize="11"
                    Margin="0,0,10,0"/>
            <Button Content="[ VIEW_TRANSCRIPT ]"
                    Command="{Binding ViewTranscriptCommand}"
                    Width="160"
                    Height="35"
                    FontSize="11"
                    Margin="0,0,10,0"/>
            <Button Content="[ VIEW_SUMMARY ]"
                    Command="{Binding ViewSummaryCommand}"
                    Width="150"
                    Height="35"
                    FontSize="11"
                    Margin="0,0,10,0"/>
            <Button Content="[ DELETE ]"
                    Command="{Binding DeleteEntryCommand}"
                    Width="110"
                    Height="35"
                    FontSize="11"
                    Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
