<Window x:Class="MeetingTranscriber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:MeetingTranscriber"
        xmlns:vm="clr-namespace:MeetingTranscriber.ViewModels"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Meeting Transcriber"
        Height="500"
        Width="850"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title and Settings -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Meeting Transcriber"
                       Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Center"/>
            <Button Content="⚙️ Settings"
                    Command="{Binding OpenSettingsCommand}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Width="100"
                    Height="32"
                    FontSize="13"/>
        </Grid>

        <!-- Control Panel -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <!-- Recording Button and Indicator -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,15">

                <Button Content="{Binding RecordingButtonText}"
                        Command="{Binding ToggleRecordingCommand}"
                        Width="150"
                        Height="40"
                        FontSize="16">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                    <Setter Property="Background" Value="#DC3545"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Recording Indicator -->
                <StackPanel Orientation="Horizontal"
                            Margin="15,0,0,0"
                            Visibility="{Binding IsRecording, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Ellipse Width="12" Height="12"
                             Fill="#DC3545"
                             Margin="0,0,8,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                From="1.0" To="0.2"
                                                                Duration="0:0:1"
                                                                AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="RECORDING"
                               FontWeight="Bold"
                               Foreground="#DC3545"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- Audio Level Meter -->
            <StackPanel Visibility="{Binding IsRecording, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Margin="0,0,0,10">
                <TextBlock Text="Audio Level:"
                           FontSize="12"
                           Margin="0,0,0,5"
                           HorizontalAlignment="Center"/>
                <ProgressBar Value="{Binding AudioLevelPercent}"
                             Width="300"
                             Height="20"
                             Minimum="0"
                             Maximum="100"
                             Foreground="#28A745"/>
            </StackPanel>

            <!-- Open Recordings Folder Button -->
            <Button Content="📁 Open Recordings Folder"
                    Command="{Binding OpenRecordingsFolderCommand}"
                    Width="200"
                    Height="32"
                    HorizontalAlignment="Center"
                    FontSize="13"
                    Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content Area (for future transcription display) -->
        <Border Grid.Row="2"
                BorderThickness="1"
                BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                CornerRadius="8"
                Padding="15"
                Margin="0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Text="Transcription will appear here..."
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           FontSize="14"/>
            </ScrollViewer>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                CornerRadius="4"
                Padding="10,5"
                Margin="0,10,0,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Status: "
                               FontWeight="SemiBold"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Status}"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </StackPanel>
                <TextBlock Text="{Binding RecordingPath}"
                           FontSize="11"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           Margin="0,5,0,0"
                           TextWrapping="Wrap"
                           Visibility="{Binding RecordingPath, Converter={StaticResource StringToVisibilityConverter}}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
