<Window x:Class="MeetingTranscriber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeetingTranscriber"
        xmlns:vm="clr-namespace:MeetingTranscriber.ViewModels"
        mc:Ignorable="d"
        Title="[MEETING TRANSCRIBER v1.0]"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        BorderThickness="0">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title and Navigation -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <!-- Title -->
            <TextBlock Text="► MEETING_TRANSCRIBER.EXE"
                       Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- Navigation Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="RecordButton"
                        Content="[ RECORD ]"
                        Click="RecordButton_Click"
                        Width="110"
                        Height="35"
                        FontSize="12"
                        Margin="0,0,10,0"/>
                <Button x:Name="HistoryButton"
                        Content="[ HISTORY ]"
                        Click="HistoryButton_Click"
                        Width="110"
                        Height="35"
                        FontSize="12"
                        Margin="0,0,10,0"/>
                <Button Content="[ CONFIG ]"
                        Command="{Binding OpenSettingsCommand}"
                        Width="110"
                        Height="35"
                        FontSize="12"/>
            </StackPanel>
        </StackPanel>

        <!-- Main Content Area -->
        <ContentControl x:Name="MainContent" Grid.Row="1"/>
    </Grid>
</Window>
